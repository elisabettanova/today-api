<?xml version="1.0"?>
<ruleset name=":package_name">
    <description>The coding standard of osman package</description>
    <arg value="p"/>

    <config name="ignore_warnings_on_exit" value="1"/>
    <config name="ignore_errors_on_exit" value="1"/>

    <arg name="colors"/>
    <arg value="s"/>

    <!-- Use the PSR2 Standard-->
    <rule ref="PSR2"/>
    <rule ref="vendor/slevomat/coding-standard/SlevomatCodingStandard/ruleset.xml">
        <exclude name="SlevomatCodingStandard.Files.TypeNameMatchesFileName"></exclude>
        <exclude name="SlevomatCodingStandard.TypeHints.DeclareStrictTypes.IncorrectStrictTypesFormat"></exclude>
        <exclude name="SlevomatCodingStandard.Classes.EmptyLinesAroundClassBraces.NoEmptyLineBeforeClosingBrace"></exclude>
        <exclude name="SlevomatCodingStandard.Namespaces.ReferenceUsedNamesOnly.ReferenceViaFullyQualifiedName"></exclude>
        <exclude name="SlevomatCodingStandard.Namespaces.ReferenceUsedNamesOnly.ReferenceViaFullyQualifiedName"></exclude>
        <exclude name="SlevomatCodingStandard.ControlStructures.NewWithoutParentheses.UselessParentheses"></exclude>
        <exclude name="SlevomatCodingStandard.TypeHints.DeclareStrictTypes.IncorrectWhitespaceBetweenOpenTagAndDeclare"></exclude>
    </rule>
    <rule ref="vendor/object-calisthenics/phpcs-calisthenics-rules/src/ObjectCalisthenics/ruleset.xml"/>

</ruleset>
